<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    android:elevation="4dp"
    android:maxHeight="?android:actionBarSize"
    >

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="27dp"
        android:layout_weight="1"
        android:src="@drawable/ic_arrow_back"
        android:background="@color/colorAccent"
        android:id="@+id/journal_show_toolbar_back_arrow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="7"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="5dp"
        android:paddingLeft="15dp">


        <TextView

            android:id="@+id/journal_show_toolbar_tv"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="27dp"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:textSize="17sp"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:text="20 November 1:48 am"/>

        <ImageButton
            android:id="@+id/journal_show_toolbar_delete"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="27dp"
            android:src="@drawable/icon_delete"
            android:background="@color/colorAccent"
            />

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="27dp"
            android:src="@drawable/icon_print"
            android:id="@+id/journal_show_toolbar_print"
            android:paddingRight="15dp"
            android:background="@color/colorAccent"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="27dp"
            android:src="@drawable/icon_edit"
            android:id="@+id/journal_show_toolbar_edit"
            android:paddingRight="15dp"
            android:background="@color/colorAccent"/>

    </LinearLayout>


</androidx.appcompat.widget.Toolbar>