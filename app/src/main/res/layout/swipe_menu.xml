<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:background="@drawable/custom_todo_item"
android:orientation="horizontal"
android:layout_height="80dp"
android:elevation="4dp"
android:weightSum="6">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="0dp"
    android:layout_weight="4"
    android:layout_marginLeft="20dp"
    android:layout_gravity="center"
    android:gravity="center_vertical"
    android:layout_height="match_parent"
    android:weightSum="3.0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5" />

    <TextView
        android:id="@+id/todo_item_title"
        android:textSize="16sp"
        android:textColor="@color/primary_text"
        android:text="Buy Ferrari"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/todo_item_description"
        android:textSize="12sp"
        android:textColor="@color/primary_text"
        android:text="From Shanghai, China"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5" />
</LinearLayout>

<LinearLayout
    android:layout_width="0dp"
    android:layout_weight="2"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:weightSum="3.0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5" />

    <TextView
        android:id="@+id/todo_item_date"
        android:textSize="12sp"
        android:textColor="@color/colorPrimary"
        android:text="Tomorrow"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/todo_item_time"
        android:textSize="12sp"
        android:textColor="@color/colorPrimary"
        android:text="8:00 PM"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5" />

</LinearLayout>

</LinearLayout>