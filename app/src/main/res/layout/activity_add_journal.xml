<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/journal_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Journal.AddJournalActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/black"
                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:weightSum="27"
                    >
                    <ImageButton
                        android:id="@+id/action_undo"
                        android:layout_width="40dp"
                        android:layout_height="48dp"
                        android:background="@color/colorPrimary"
                        android:contentDescription="@null"
                        android:src="@drawable/icon_undo"
                        />

                    <ImageButton
                        android:id="@+id/action_redo"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@color/colorPrimary"
                        android:contentDescription="@null"
                        android:src="@drawable/icon_redo"
                        />

                    <ImageButton
                        android:id="@+id/action_bold"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@color/colorPrimary"
                        android:contentDescription="@null"
                        android:src="@drawable/icon_bold"
                        />

                    <ImageButton
                        android:id="@+id/action_italic"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@color/colorPrimary"
                        android:contentDescription="@null"
                        android:src="@drawable/icon_italic"
                        />

                    <Button
                        android:id="@+id/action_subscript"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/colorWhite"
                        android:text="@string/subscript"
                        android:textAllCaps="false"
                        />

                    <Button
                        android:id="@+id/action_superscript"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/colorWhite"
                        android:text="@string/superscript"
                        android:textAllCaps="false"
                        />

                    <Button
                        android:id="@+id/action_strikethrough"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/colorWhite"
                        android:text="@string/strikethrough"
                        android:textAllCaps="false"
                        />


                    <ImageButton
                        android:id="@+id/action_underline"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@color/colorPrimary"
                        android:contentDescription="@null"
                        android:src="@drawable/icon_underline"
                        />

                    <Button
                        android:id="@+id/action_heading1"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/colorWhite"
                        android:text="@string/heading1"
                        android:textAllCaps="false"
                        />

                    <Button
                        android:id="@+id/action_heading2"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/colorWhite"
                        android:text="@string/heading2"
                        android:textAllCaps="false"
                        />
                    <Button
                        android:id="@+id/action_heading3"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/colorWhite"
                        android:text="@string/heading3"
                        android:textAllCaps="false"
                        />
                    <Button
                        android:id="@+id/action_heading4"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/colorWhite"
                        android:text="@string/heading4"
                        android:textAllCaps="false"
                        />
                    <Button
                        android:id="@+id/action_heading5"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/colorWhite"
                        android:text="@string/heading5"
                        android:textAllCaps="false"
                        />
                    <Button
                        android:id="@+id/action_heading6"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/colorWhite"
                        android:text="@string/heading6"
                        android:textAllCaps="false"
                        />


                    <ImageButton
                        android:id="@+id/action_txt_color"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@color/colorPrimary"
                        android:contentDescription="@null"
                        android:src="@drawable/icon_txt_color"
                        />

                    <ImageButton
                        android:id="@+id/action_bg_color"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@color/colorPrimary"
                        android:contentDescription="@null"
                        android:src="@drawable/icon_bg_color"
                        />


                    <ImageButton
                        android:id="@+id/action_indent"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@color/colorPrimary"
                        android:contentDescription="@null"
                        android:src="@drawable/icon_indent"
                        />

                    <ImageButton
                        android:id="@+id/action_outdent"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@color/colorPrimary"
                        android:contentDescription="@null"
                        android:src="@drawable/icon_outdent"
                        />

                    <ImageButton
                        android:id="@+id/action_align_left"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@color/colorPrimary"
                        android:contentDescription="@null"
                        android:src="@drawable/icon_align_left"
                        />

                    <ImageButton
                        android:id="@+id/action_align_center"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@color/colorPrimary"
                        android:contentDescription="@null"
                        android:src="@drawable/icon_align_center"
                        />

                    <ImageButton
                        android:id="@+id/action_align_right"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@color/colorPrimary"
                        android:contentDescription="@null"
                        android:src="@drawable/icon_align_right"
                        />

                    <ImageButton
                        android:id="@+id/action_insert_bullets"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@color/colorPrimary"
                        android:contentDescription="@null"
                        android:src="@drawable/icon_insert_bullets"
                        />

                    <ImageButton
                        android:id="@+id/action_insert_numbers"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@color/colorPrimary"
                        android:contentDescription="@null"
                        android:src="@drawable/icon_insert_numbers"
                        />

                    <ImageButton
                        android:id="@+id/action_blockquote"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@color/colorPrimary"
                        android:contentDescription="@null"
                        android:src="@drawable/icon_blockquote"
                        />

                    <ImageButton
                        android:id="@+id/action_insert_image"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@color/colorPrimary"
                        android:contentDescription="@null"
                        android:src="@drawable/icon_insert_image"
                        />

                    <ImageButton
                        android:id="@+id/action_insert_link"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@color/colorPrimary"
                        android:contentDescription="@null"
                        android:src="@drawable/icon_insert_link"
                        />

                    <ImageButton
                        android:id="@+id/action_insert_checkbox"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@color/colorPrimary"
                        android:contentDescription="@null"
                        android:src="@drawable/icon_insert_checkbox"
                        />

                </LinearLayout>
            </HorizontalScrollView>

            <jp.wasabeef.richeditor.RichEditor
                android:id="@+id/editor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />

            <!--
            <TextView
                android:id="@+id/preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                />-->

        </LinearLayout>

        <ProgressBar
            android:id="@+id/add_journal_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:visibility="invisible"/>

        <ToggleButton
            android:id="@+id/add_journal_voice_command_toggle_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/bg_toggle_button"
            android:foreground="@drawable/fg_toggle_button"
            android:foregroundGravity="center"
            android:textOn=""
            android:textOff=""
            android:text=""
            android:clickable="true"
            android:focusable="true"
            android:shadowColor="@color/colorPrimary"
            android:elevation="4dp"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:paddingRight="20dp"
        android:layout_marginBottom="30dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_journal_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_save"
            app:elevation="4dp"
            app:fabSize="normal"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:paddingLeft="20dp"
        android:layout_marginBottom="30dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_journal_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_preview"
            app:elevation="4dp"
            app:fabSize="normal"/>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>